{
  "name": "@h5web/app",
  "version": "0.0.1",
  "description": "H5Web app and providers",
  "author": "European Synchrotron Radiation Facility",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silx-kit/h5web"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "exports": {
      "./dist/styles.css": "./dist/styles.css",
      "./styles.css": "./dist/styles.css",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.esm.js",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "vite build && run-p build:*",
    "build:css": "vite build --config vite.styles.config.js && concat dist/temp/style.css dist/style.css -o dist/styles.css && rimraf dist/style.css dist/temp",
    "build:dts": "tsc --build tsconfig.build.json && rollup -c",
    "lint:eslint": "eslint \"**/*.{js,cjs,ts,tsx}\" --max-warnings=0",
    "lint:tsc": "tsc",
    "test": "jest",
    "analyze": "pnpm dlx source-map-explorer dist/index.js --no-border-checks",
    "prepack": "pnpm dlx dot-json@latest package.json -d type"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "typescript": ">=4.5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@h5web/lib": "workspace:*",
    "@react-hookz/web": "23.1.0",
    "@react-three/fiber": "8.14.1",
    "axios": "1.5.0",
    "d3-format": "3.1.0",
    "lodash": "4.17.21",
    "ndarray": "1.0.19",
    "ndarray-ops": "1.2.2",
    "react-error-boundary": "4.0.11",
    "react-icons": "4.11.0",
    "react-reflex": "4.1.0",
    "react-slider": "2.0.4",
    "react-suspense-fetch": "0.4.1",
    "three": "0.156.1",
    "zustand": "4.4.1"
  },
  "devDependencies": {
    "@h5web/shared": "workspace:*",
    "@rollup/plugin-alias": "5.0.0",
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "6.1.3",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.5.0",
    "@types/d3-format": "~3.0.1",
    "@types/lodash": "~4.14.198",
    "@types/ndarray": "1.0.11",
    "@types/node": "^18.17.15",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-slider": "~1.3.1",
    "@vitejs/plugin-react": "4.0.4",
    "concat": "1.0.3",
    "eslint": "8.28.0",
    "eslint-config-galex": "4.5.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "npm-run-all": "4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "rollup": "3.29.1",
    "rollup-plugin-dts": "6.0.2",
    "typescript": "5.0.4",
    "vite": "4.4.9"
  }
}
