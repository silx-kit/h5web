{
  "name": "@h5web/h5wasm",
  "version": "17.0.0-beta.1",
  "description": "H5Web providers based on H5Wasm",
  "author": "European Synchrotron Radiation Facility",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silx-kit/h5web"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build && pnpm build:dts",
    "build:dts": "tsc --build tsconfig.build.json && rollup -c",
    "lint:eslint": "eslint --max-warnings=0",
    "lint:tsc": "tsc",
    "analyze": "pnpm dlx source-map-explorer dist/index.js --no-border-checks",
    "prepack": "dot-json package.json -d type",
    "sync-version": "dot-json ../../package.json version | xargs dot-json package.json version"
  },
  "peerDependencies": {
    "@h5web/app": "workspace:*",
    "@types/react": "18.x",
    "h5wasm-plugins": "0.2.0",
    "react": "18.x",
    "typescript": ">=4.5"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "h5wasm-plugins": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "comlink": "4.4.2",
    "h5wasm": "0.8.7",
    "nanoid": "5.1.6"
  },
  "devDependencies": {
    "@esrf/eslint-config": "1.7.4",
    "@h5web/app": "workspace:*",
    "@h5web/shared": "workspace:*",
    "@rollup/plugin-alias": "6.0.0",
    "@types/node": "^24.10.4",
    "@types/react": "^18.3.27",
    "@vitejs/plugin-react-swc": "4.2.2",
    "dot-json": "1.3.0",
    "eslint": "9.39.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollup": "4.54.0",
    "rollup-plugin-dts": "6.3.0",
    "typescript": "5.9.3",
    "vite": "7.3.0",
    "vitest": "4.0.16"
  }
}
