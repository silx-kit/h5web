{
  "name": "@h5web/h5wasm",
  "version": "0.0.1",
  "description": "H5Web providers based on H5Wasm",
  "author": "European Synchrotron Radiation Facility",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silx-kit/h5web"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "import": "./dist/index.esm.js"
      }
    }
  },
  "scripts": {
    "build": "vite build && pnpm build:dts",
    "build:dts": "tsc --build tsconfig.build.json && rollup -c",
    "lint:eslint": "eslint \"**/*.{js,cjs,ts,tsx}\" --max-warnings=0",
    "lint:tsc": "tsc",
    "analyze": "pnpm dlx source-map-explorer dist/index.js --no-border-checks",
    "prepack": "pnpm dlx dot-json@latest package.json -d type"
  },
  "peerDependencies": {
    "@h5web/app": "workspace:*",
    "react": ">=16"
  },
  "dependencies": {
    "h5wasm": "0.4.10",
    "nanoid": "4.0.2"
  },
  "devDependencies": {
    "@h5web/app": "workspace:*",
    "@h5web/shared": "workspace:*",
    "@rollup/plugin-alias": "5.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^17.0.56",
    "@vitejs/plugin-react": "2.2.0",
    "eslint": "8.28.0",
    "eslint-config-galex": "4.4.2",
    "react": "17.0.2",
    "rollup": "3.20.2",
    "rollup-plugin-dts": "5.3.0",
    "typescript": "4.9.4",
    "vite": "3.2.5"
  }
}
