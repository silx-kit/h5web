{
  "name": "@h5web/lib",
  "version": "11.2.0",
  "description": "Data visualization toolkit",
  "author": "European Synchrotron Radiation Facility",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/silx-kit/h5web"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
      "./dist/styles.css": "./dist/styles.css",
      "./styles.css": "./dist/styles.css",
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.mjs",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "vite build && pnpm \"/^build:/\"",
    "build:css": "vite build --config vite.styles.config.js && concat dist/temp/style.css dist/style.css -o dist/styles.css && rimraf dist/style.css dist/temp",
    "build:dts": "tsc --build tsconfig.build.json && rollup -c",
    "lint:eslint": "eslint \"**/*.{js,cjs,ts,tsx}\" --max-warnings=0",
    "lint:tsc": "tsc",
    "analyze": "pnpm dlx source-map-explorer dist/index.js --no-border-checks",
    "prepack": "dot-json package.json -d type",
    "sync-version": "dot-json ../../package.json version | xargs dot-json package.json version"
  },
  "peerDependencies": {
    "@react-three/fiber": ">=8",
    "react": ">=18",
    "react-dom": ">=18",
    "three": ">=0.138",
    "typescript": ">=4.5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@floating-ui/react": "0.26.14",
    "@react-hookz/web": "24.0.4",
    "@visx/axis": "3.10.1",
    "@visx/drag": "3.3.0",
    "@visx/grid": "3.5.0",
    "@visx/scale": "3.5.0",
    "@visx/shape": "3.5.0",
    "@visx/tooltip": "3.3.0",
    "d3-array": "3.2.4",
    "d3-color": "3.1.0",
    "d3-format": "3.1.0",
    "d3-interpolate": "3.0.1",
    "d3-scale": "4.0.2",
    "d3-scale-chromatic": "3.1.0",
    "ndarray": "1.0.19",
    "ndarray-ops": "1.2.2",
    "react-aria-menubutton": "7.0.3",
    "react-icons": "5.2.1",
    "react-keyed-flatten-children": "3.0.0",
    "react-measure": "2.5.2",
    "react-slider": "2.0.4",
    "react-window": "1.8.10",
    "zustand": "4.5.2"
  },
  "devDependencies": {
    "@h5web/shared": "workspace:*",
    "@react-three/fiber": "8.16.6",
    "@rollup/plugin-alias": "5.1.0",
    "@types/d3-array": "~3.2.1",
    "@types/d3-color": "~3.1.3",
    "@types/d3-format": "~3.0.4",
    "@types/d3-interpolate": "~3.0.4",
    "@types/d3-scale": "~4.0.8",
    "@types/d3-scale-chromatic": "~3.0.3",
    "@types/ndarray": "~1.0.14",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.2",
    "@types/react-aria-menubutton": "~6.2.14",
    "@types/react-dom": "^18.3.0",
    "@types/react-measure": "~2.0.12",
    "@types/react-slider": "~1.3.6",
    "@types/react-window": "~1.8.8",
    "@types/three": "0.164.0",
    "@vitejs/plugin-react-swc": "3.6.0",
    "concat": "1.0.3",
    "dot-json": "1.3.0",
    "eslint": "8.57.0",
    "eslint-config-galex": "4.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rimraf": "5.0.7",
    "rollup": "4.17.2",
    "rollup-plugin-dts": "6.1.0",
    "three": "0.164.1",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vite-css-modules": "1.4.2",
    "vitest": "1.6.0"
  }
}
